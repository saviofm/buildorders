---
{{#isMultitenant}}
sidecar:
  bindings:
    auth:
      serviceInstanceName: xsuaa
{{/isMultitenant}}
{{#hasApprouter}}
approuter:
  bindings:
    auth:
      serviceInstanceName: xsuaa
{{/hasApprouter}}
srv:
  bindings:
    auth:
      serviceInstanceName: xsuaa
xsuaa:
  serviceOfferingName: xsuaa
  servicePlanName: application
  parameters:
    xsappname: {{appName}}
    tenant-mode: {{#isMultitenant}}shared{{/isMultitenant}}{{^isMultitenant}}dedicated{{/isMultitenant}}
{{#hasApprouter}}
    oauth2-configuration:
      redirect-uris:
      - https://*.<your-cluster-domain>/**
{{/hasApprouter}}
