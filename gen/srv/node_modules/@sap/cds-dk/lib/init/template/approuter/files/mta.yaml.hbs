---
modules:
  - name: {{appName}}-srv
    type: {{language}}
    path: {{& srvPath}}
    {{#isJava}}
    {{#isMultitenant}}
    properties:
      CDS_MULTITENANCY_APPUI_TENANTSEPARATOR: "-"
    {{/isMultitenant}}
    {{/isJava}}
    requires:
      - name: {{appName}}-auth
    {{#isJava}}
      - name: app-api
        properties:
          CDS_MULTITENANCY_APPUI_URL: ~{url}
    {{/isJava}}

  - name: {{appName}}
    type: approuter.nodejs
    path: {{& appPath}} # from cds.env.folders. Consider also cds.env.build.target -> gen/app
    parameters:
      keep-existing-routes: true
      disk-quota: 256M
      memory: 256M
    {{#isMultitenant}}
    properties:
      TENANT_HOST_PATTERN: "^(.*)-${default-uri}"
    {{/isMultitenant}}
    requires:
      - name: srv-api
        group: destinations
        properties:
          name: srv-api # must be used in xs-app.json as well
          url: ~{srv-url}
          forwardAuthToken: true
      {{#isMultitenant}}
      - name: mtx-api
        group: destinations
        properties:
          name: mtx-api # must be used in xs-app.json as well
          url: ~{mtx-url}
      {{/isMultitenant}}
    {{#isMultitenant}}
    {{#isNodejs}}
    provides:
      - name: app-api
        properties:
          app-protocol: ${protocol}
          app-uri: ${default-uri}
    {{/isNodejs}}
    {{/isMultitenant}}
    {{#isJava}}
    provides:
      - name: app-api
        properties:
          url: ${default-url}
    {{/isJava}}

  {{#isMultitenant}}
  - name: {{appName}}-mtx
    type: nodejs
    path: {{#isNodejs}}gen/{{/isNodejs}}mtx/sidecar
    requires:
      - name: app-api
        properties:
          SUBSCRIPTION_URL: ~{app-protocol}://\${tenant_subdomain}-~{app-uri}
  {{/isMultitenant}}

resources:
  - name: {{appName}}-auth
    type: org.cloudfoundry.managed-service
    parameters:
      service: xsuaa
      service-plan: application
      path: ./xs-security.json
      config:
        xsappname: {{appName}}-${org}-${space}
        tenant-mode: {{#isMultitenant}}shared{{/isMultitenant}}{{^isMultitenant}}dedicated{{/isMultitenant}}
